extends index.pug

block head
  link(rel="stylesheet" media="all" href="/css/laminar.base.min.css")
  link(rel="stylesheet" media="all" href="/css/traviscolbert.min.css")

block content
  section.home
    article#comment
      form#comment-form(action="/comments/" method="post")
        h1 Contact
        .inputcommentname.itemdetail.forminput
          input#name(type="text" name="name" placeholder="Name" tabindex=0 autofocus)
        .inputcommentemail.itemdetail.forminput
          input#email(type="text" name="email" placeholder="Email" tabindex=0)
        .inputcommentmessage.itemdetail.forminput
          textarea#text(name="text" placeholder="Message" tabindex=0)
        .inputcommentsubmit.itemdetail.forminput
          input#submit.btn.normal(type="submit" value="Send Message")
