extends index.pug

block content
  .layout-col
    .section-hdg.section-hdg-1 Create Domain
    .user-listing.layout-col
      form(action="/domains/" method="post")
        .inputdomainname
          input#name(type="text" name="name" placeholder="name of domain" autofocus)
        .inputdomaindescription
          input#description(type="text" name="description" placeholder="description of domain")
        .submit.itemdetail.layout-col
          .label Actions:
          .data
            input#submit.btn.normal.buttonconfirm(type="submit" value="Confirm")
            a.btn.cancel.buttoncancel(href="/domain/") Cancel

