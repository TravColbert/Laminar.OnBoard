extends index.pug

block aside
  aside.sidebar
    .title Role Actions
    .nav
      .navitem One item
      .navitem Two 
      .navitem Three
    .actions.secondary
      input.btn.primary.buttonconfirm(type="submit" id="submit" value="Confirm" form="domain-edit")
      a.btn.cancel(href="/domains/") Cancel

      //- #note_add_button_container.addnote.authUI(data-fetch="note_add" data-href="/actions/create/notes/")

block content
  section
    .section-hdg.section-hdg-1 Domain #{domain.name}
    .item-listing
      form#domain-edit(action="/domain/edit/" method="post")
        input(id="domainid" type="hidden" name="domainid" value=domain.id)
        .itemdetail
          label.label(for="domainname") Name:
          .data #{domain.name}
        .itemdetail
          label.label(for="domaindescription") Description:
          .data #{domain.description}
        .itemdetail
          label.label(for="domainroles") Roles:
          each role in domain.roles
            .data #{role.name}
            .data #{role.description}
