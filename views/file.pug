block aside
  aside.sidebar
    .sticky-50.flexy-column
      if(user)
        article.fileactions
          .hdg.hdg-2 Actions
          #file_add_button_container.addfile.authUI(data-fetch="file_add" data-href="/actions/create/file/")
          #file_edit_button_container.editfile.authUI(data-fetch="file_edit" data-href="/files/" + files.id + "/actions/edit/")
        +list-user-invites()
        //- #articles
        //-   include articles-list
        +list-user-domains("Domain")
        +create-or-see-domains("Domain")
