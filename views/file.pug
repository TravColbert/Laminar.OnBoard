block content
  section.file
    article.main
      .hdg.hdg-2.articletitle File: #{files.name}
      .item
        .itemdetail
          label.label Description:
          .data #{files.description}
        .itemdetail
          label.label Unique ID:
          .data #{files.appid}
        .itemdetail
          label.label Type:
          .data #{files.mimetype}
        .itemdetail
          label.label Domain
          .data #{files.domain.name}
        .itemdetail
          label.label User
          .data #{files.user.fullname}
        if(files)
          .itemdetail.filevisibility
            label.label Public:
            .data
              input#public.hidden(type="checkbox" name="public" value="true" disabled checked=!!(files.public))
              label.togglepublicfalse(for="public")
                i.material-icons.toggle.toggleoff visibility_off
              label.togglepublictrue(for="public")
                i.material-icons.toggle.toggleon visibility
        .itemdetail
          label.label View
          .data
            picture
              source(srcset='/files/' + files.appid)
              img.preview(src='/files/' + files.appid)
        if(files.mimetype.includes('image'))
          .itemdetail
            label.label Snippets
            .data Use this snippet to include this image in a note entry:
            pre.snippet
              = '<figure>\n'
              = '\t<img src="https://[your.url]/files/' + files.appid + '" alt="[your_description]">\n'
              = '\t<figcaption>[Fig.1 - your_caption.]</figcaption>\n'
              = '</figure>\n'
            .data Remember to change the URL, description and caption!

