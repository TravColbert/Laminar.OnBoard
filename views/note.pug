extends index.pug

block content
  section.note
    article.main
      .hdg.hdg-1 Note #{note.id}
      div
        .item-listing
          .itemdetail
            label.label Title:
            .data #{note.name}
          .itemdetail
            label.label Description:
            .data #{note.description}
          .itemdetail
            label.label Domain:
            .data #{note.domain.name}
          .itemdetail
            label.label Public:
            .data
              input#public.hidden(type="checkbox" name="public" value="true" disabled checked=!!(note.public))
              label.togglepublicfalse(for="public")
                i.material-icons.toggle.toggleoff toggle_off
              label.togglepublictrue(for="public")
                i.material-icons.toggle.toggleon toggle_on
          .itemdetail
            label.label Body:
            .data
              pre #{note.body}
    article.secondary
      .hdg.hdg-1 Note Actions
      #note_edit_button_container.editnote.authUI(data-fetch="note_edit" data-href="/notes/" + note.id + "/actions/edit/")
      .description
        .infotext.hdg.hdg-3 Note View
        .infotext This is a list of users. You may edit the user's details by clicking on a user entry.
        .infotext Click the "Add User" button to create a new user.
        .infotext Each user is given a user ID that is used by stockr to keep track of the user and the user's cases.
