extends index.pug

block aside
  aside.sidebar
    .title Note Actions
    .nav
      .navitem One item
      .navitem Two 
      .navitem Three
    .actions.secondary
      #note_add_button_container.addnote.authUI(data-fetch="note_add" data-href="/actions/create/notes/")
      #note_edit_button_container.editnote.authUI(data-fetch="note_edit" data-href="/notes/" + note.id + "/actions/edit/")

block content
  section.note
    article.main
      .hdg.hdg-1 Note #{note.id}
      div
        .item-listing
          .itemdetail
            label.label Title:
            .data #{note.name}
          .itemdetail
            label.label Description:
            .data #{note.description}
          .itemdetail
            label.label Domain:
            .data #{note.domain.name}
          .itemdetail
            label.label Public:
            .data
              input#public.hidden(type="checkbox" name="public" value="true" disabled checked=!!(note.public))
              label.togglepublicfalse(for="public")
                i.material-icons.toggle.toggleoff toggle_off
              label.togglepublictrue(for="public")
                i.material-icons.toggle.toggleon toggle_on
          .itemdetail
            label.label Body:
            .notebody !{note.html}
