extends index.pug

block content
  section.layout-width-sd.layout-col
    h2 Create User
    .layout-row.layout-width-1-1
      .item-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
        form(action="/users/" method="post")
          .inputuseremail.itemdetail.layout-col
            label.label(for="name") User Email:
            .data
              input#email(type="text" name="email" placeholder="email address" autofocus)
          .inputuserfirstname.itemdetail.layout-col
            label.label(for="firstname") User First (Given) Name:
            .data
              input#firstname(type="text" name="firstname" placeholder="first (given) name")
          .inputuserlastname.itemdetail.layout-col
            label.label(for="lastname") User Last (Family) Name:
            .data
              input#lastname(type="text" name="lastname" placeholder="last (family) name")
          .inputuserpassword.itemdetail.layout-col
            label.label(for="password") User Password:
            .data
              input#password(type="password" name="password" placeholder="Passphrase")
          .inputuserpasswordverify.itemdetail.layout-col
            label.label(for="passwordverify") Password (Verify):
            .data
              input#passwordverify(type="password" name="passwordverify" placeholder="Verify Passphrase")
          .itemdetail.layout-col
            label.label(for="passwordverify") Role Group Selection:
            each role in roles
              .inputuserrolelist.itemdetail.layout-col
                .data.layout-row
                  input(id="role" + role.id type="radio" name="role" value="#{role.id}")
                  label(for="role" + role.id) #{role.name}
          .usersubmit.itemdetail.layout-col
            .label Actions:
            .data
              input#submit.btn.normal.buttonconfirm(type="submit" value="Confirm")
              a.btn.cancel.buttoncancel(href="/users/") Cancel

block scripts
  script(src='/js/bcrypt.min.js')
