extends index.pug

block aside
  aside.sidebar
    h2 Role Actions
    .nav
      .navitem One item
      .navitem Two 
      .navitem Three
    .actions.secondary
      label.label Actions:
      .data.layout-row
        input.btn.primary.buttonconfirm(type="submit" id="submit" value="Confirm" form="role-edit-users")
        a.btn.cancel(href="/roles/") Cancel

block content
  .layout-col
    h2 Role
    .user-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
      form#role-edit-users(action="/role/edit" method="post")
        input(id="roleid" type="hidden" name="roleid" value=role.id)
        .itemdetail.layout-col
          label.label(for="partnum") Name:
          .data #{role.name}
        .itemdetail.layout-col
          label.label(for="partnum") Description:
          .data #{role.description}
        .itemdetail.layout-col
          label.label Users:
          each user in role.users
            .data #{user.fullname} (#{user.email})
