extends index.pug

block aside
  aside.sidebar
    article.roleactions
      h2 Role Actions
      .actions.secondary
        #role_add_button_container.addrole.authUI(data-fetch="role_add" data-href="/actions/create/roles/")
        //- #note_add_button_container.addnote.authUI(data-fetch="note_add" data-href="/actions/create/notes/")

block content
  section.role
    article.main
      h2 Roles (#{roles.length})
      .item-listing
        ul
          each item in roles
            - let targetLoc = "/roles/" + item.id + "/";
            li.layout-col.clickable(onclick="goTo('" + targetLoc + "')")
              .itemdetail.layout-col
                .label Role:
                .data #{item.name}
              - let description = item.description || null
              if description
                .itemdetail.layout-col
                  .label Description:
                  .data #{item.description}
